{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "es6",
      "target": "es2022",
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "lib": ["dom", "es2015", "es2016", "es2017"],
      "skipLibCheck": true
    },
    "include": [
      "src/**/*",
      "global.d.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }
